<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_employee_form_adding_destination_location" model="ir.ui.view">
        <field name="name">view_employee_form_adding_destination_location</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='hr_settings']" position="after">
                <page string="Purchase Requisition Setting" name="purchase_requisition_setting">
                    <group>
                        <group>
                            <field name="destination_location_id"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>